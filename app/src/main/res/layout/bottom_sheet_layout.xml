<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_1"
    android:id="@+id/idRLBSheet"
    >

    <TextView
        android:id="@+id/idTVRealEstateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Real Estate Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/idIVRealEstate"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVRealEstateName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idTVDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVRealEstateName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVRealEstate"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVDescription"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVRealEstate"
        android:padding="3dp"
        android:text="Location"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVLocation"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVRealEstate"
        android:padding="3dp"
        android:text="Price"
        android:textStyle="bold"
        android:textColor="@color/white" />


</RelativeLayout>